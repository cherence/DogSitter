<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    android:layout_gravity="center"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <ImageView
            android:id="@+id/pet_profile_ImageView_id"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/placeholder_pet_profile"
            />

        <TextView
            android:id="@+id/pet_name_textView_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_profile_ImageView_id"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Kaikea Malu Flores"/>

        <TextView
            android:id="@+id/pet_nickName_textView_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_name_textView_id"
            android:textSize="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="italic"
            android:text="Booty"/>

        <TextView
            android:id="@+id/pet_ageLabel_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:textStyle="bold"
            android:layout_below="@id/pet_nickName_textView_id"
            android:text="Age: "/>

        <TextView
            android:id="@+id/pet_age_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/pet_ageLabel_textView_id"
            android:layout_below="@id/pet_nickName_textView_id"
            android:text="6"/>

        <EditText
            android:id="@+id/pet_age_editText_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_nickName_textView_id"
            android:layout_toEndOf="@id/pet_ageLabel_textView_id"
            android:textAlignment="center"
            android:hint="How old is your dog?"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/pet_weightLabel_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_below="@id/pet_age_textView_id"
            android:text="Weight: "/>

        <TextView
            android:id="@+id/pet_weight_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/pet_weightLabel_textView_id"
            android:layout_below="@id/pet_age_textView_id"
            android:text="20 lbs"/>

        <TextView
            android:id="@+id/pet_breedLabel_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_below="@id/pet_weight_textView_id"
            android:text="Breed: "/>

        <TextView
            android:id="@+id/pet_breed_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/pet_breedLabel_textView_id"
            android:layout_below="@id/pet_weight_textView_id"
            android:text="Spitz"/>

        <TextView
            android:id="@+id/pet_colorLabel_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_below="@id/pet_breed_textView_id"
            android:text="Color: "/>

        <TextView
            android:id="@+id/pet_color_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/pet_colorLabel_textView_id"
            android:layout_below="@id/pet_breed_textView_id"
            android:text="White"/>

        <TextView
            android:id="@+id/pet_specialNeedsLabel_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_below="@id/pet_color_textView_id"
            android:text="Special Needs: "/>

        <TextView
            android:id="@+id/pet_specialNeeds_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/pet_specialNeedsLabel_textView_id"
            android:layout_below="@id/pet_color_textView_id"
            android:text="Diabetic"/>

        <TextView
            android:id="@+id/pet_allergiesLabel_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_below="@id/pet_specialNeeds_textView_id"
            android:text="Known Allergies: "/>

        <TextView
            android:id="@+id/pet_allergies_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/pet_allergiesLabel_textView_id"
            android:layout_below="@id/pet_specialNeeds_textView_id"
            android:text="Gluten"/>

        <TextView
            android:id="@+id/pet_medicationLabel_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_below="@id/pet_allergies_textView_id"
            android:text="Current Medication: "/>

        <TextView
            android:id="@+id/pet_medication_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/pet_medicationLabel_textView_id"
            android:layout_below="@id/pet_allergies_textView_id"
            android:text="Insulin"/>

        <TextView
            android:id="@+id/pet_injuriesLabel_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_below="@id/pet_medication_textView_id"
            android:text="Known Injuries: "/>

        <TextView
            android:id="@+id/pet_injuries_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/pet_injuriesLabel_textView_id"
            android:layout_below="@id/pet_medication_textView_id"
            android:text="Rear left leg is tender"/>

        <TextView
            android:id="@+id/pet_fearsLabel_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_below="@id/pet_injuries_textView_id"
            android:text="Fears: "/>

        <TextView
            android:id="@+id/pet_fears_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/pet_fearsLabel_textView_id"
            android:layout_below="@id/pet_injuries_textView_id"
            android:text="Thunder, lightning, strong winds, and fireworks"/>

        <TextView
            android:id="@+id/pet_hatesLabel_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_below="@id/pet_fears_textView_id"
            android:text="Hates: "/>

        <TextView
            android:id="@+id/pet_hates_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/pet_hatesLabel_textView_id"
            android:layout_below="@id/pet_fears_textView_id"
            android:text="Cats and the vacuum cleaner"/>

        <TextView
            android:id="@+id/pet_lovesLabel_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_below="@id/pet_hates_textView_id"
            android:text="Loves: "/>

        <TextView
            android:id="@+id/pet_loves_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/pet_lovesLabel_textView_id"
            android:layout_below="@id/pet_hates_textView_id"
            android:text="Belly rubs and squeaker toys"/>

        <TextView
            android:id="@+id/pet_tricksLabel_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_below="@id/pet_loves_textView_id"
            android:text="Tricks: "/>

        <TextView
            android:id="@+id/pet_tricks_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/pet_tricksLabel_textView_id"
            android:layout_below="@id/pet_loves_textView_id"
            android:text="Sit and paw"/>

        <TextView
            android:id="@+id/pet_routineLabel_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_below="@id/pet_tricks_textView_id"
            android:text="Routine: "/>

        <TextView
            android:id="@+id/pet_routine_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/pet_routineLabel_textView_id"
            android:layout_below="@id/pet_tricks_textView_id"
            android:text="Sunbathes until around 12pm then people watches and plays with his toys"/>

        <TextView
            android:id="@+id/pet_hideoutsLabel_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_below="@id/pet_routine_textView_id"
            android:text="Hiding Spots: "/>

        <TextView
            android:id="@+id/pet_hideouts_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/pet_hideoutsLabel_textView_id"
            android:layout_below="@id/pet_routine_textView_id"
            android:text="Sunbathes until around 12pm then people watches and plays with his toys"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>